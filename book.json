{
    "title": "数据库笔记,dbnotes",
    "author": "amberwww",
    "output.name": "site",
    "language": "zh-hans",
    "gitbook": "3.2.3",
    "root": ".",
    "plugins": [
        "-sharing",
        "-lunr","-search","search-pro",
        "-highlight","prism@^2.1.0","prism-themes",
        "-default-theme","theme-comscore",
        "splitter",
        "tbfed-pagefooter",
        "expandable-chapters",
        "hide-element",
        "favicon",
        "code",
        "sectionx",
        "flexible-alerts",
        "ancre-navigation",
        "donate@^1.0.2",
        "pageview-count",
        "auto-scroll-table"
    ],

    "pluginsConfig": {
        "tbfed-pagefooter": {
            "copyright":"Copyright &copy www.dbnotes.cn 2026",
            "modify_label": "更新时间：",
            "modify_format": "YYYY-MM-DD HH:mm:ss"
        },

        "hide-element": {
            "elements": [".gitbook-link"]
        },

        "favicon": {
            "shortcut": "icon/home.ico",
            "bookmark": "icon/home.ico"
        },

        "pdf": {
            "pageNumbers": true,
            "fontFamily": "Arial",
            "fontSize": 12,
            "paperSize": "a4",
            "margin": {
                "right": 62,
                "left": 62,
                "top": 56,
                "bottom": 56
            }
        },

       "prism":{
            "css":[
                "prism-themes/themes/prism-darcula.css"
            ]
       },

       "sectionx": {
          "tag": "b"
        },

        "donate": {
            "wechat": "https://static.dbnotes.cn/image/QRcode/weixin.jpg",
            "alipay": "https://static.dbnotes.cn/image/QRcode/alipay.jpg",
            "title": "",
            "button": "赏",
            "alipayText": "支付宝打赏",
            "wechatText": "微信打赏"
        }
    },

    "styles": {
        "website": "styles/website.css",
        "ebook": "styles/ebook.css",
        "pdf": "styles/pdf.css",
        "mobi": "styles/mobi.css",
        "epub": "styles/epub.css"
    }
}
